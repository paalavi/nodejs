<%-include('./layout/header') -%>
<main>
    <div class="container">
        <div class="row pt-5 justify-content-center">
            <div class="col-8">
                <div class="card card-default">
                    <div class="card-header"><h5>عضویت در سایت</h5></div>
                    <div class="card-body">
                        <form class="form-horizontal" method="POST" action="/login" novalidate>
                            <%-include('./layout/errorMessages') %>
                            <div class="form-group">
                                <label for="email" class="control-label">آدرس ایمیل</label>
                                <input id="email" type="email" class="form-control" name="email" value="">
                            </div>
                            <div class="form-group">
                                <label for="password" class="control-label">پسورد</label>
                                <input id="password" type="password" class="form-control" name="password">
                            </div>
                            <div class="form-group">
                                <%- recaptcha %>
                            </div>
                            <div class="form-group">
                                <label for="remember" class="control-label">من را به خاطر بسپار <input id="remember" type="checkbox" name="remember" ></label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">عضویت</button>
                                <a href="./auth/google" class="btn btn-danger">ورود با اکانت گوگل</a>
                                <a href="./resetPassword/reset" >بازیابی رمز عبور</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%-include('./layout/footer') -%>