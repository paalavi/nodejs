<%-include('./layout/header') -%>
<main >
<div class="container">
    <div class="row pt-5 justify-content-center">
        <div class="col-8">
            <div class="card card-default">
                <div class="card-header"><h5>بازیابی رمز عبور</h5></div>
                <div class="card-body">
                    <form class="form-horizontal" method="POST" action="/resetPassword/email" novalidate>
                        <%-include('./layout/errorMessages') %>
                        <div class="form-group">
                            <label for="email" class="control-label">آدرس ایمیل</label>
                            <input id="email" type="email" class="form-control" name="email" value="" required="">
                        </div>
                        <div class="form-group">
                            <%- recaptcha %>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

<%-include('./layout/footer') -%>